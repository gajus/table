{
  "include": [
    "src", "test"
  ],
  "ts-node": {
   "sourceMap": true,
    "transpileOnly": true
  },
  "compilerOptions": {
    "resolveJsonModule": true,
    "incremental": true,
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018"],
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "isolatedModules": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "typeRoots": ["src/types/external", "node_modules/@types"],
    "esModuleInterop": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true
  }
}
